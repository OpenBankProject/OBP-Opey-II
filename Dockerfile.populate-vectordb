# Dockerfile for running populate_vector_db.py script
FROM python:3.12.7-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy pyproject.toml and poetry.lock (if exists) for dependency installation
COPY pyproject.toml ./

# Install poetry
RUN pip install --no-cache-dir poetry

# Install dependencies
RUN poetry config virtualenvs.create false \
    && poetry install --only main --no-interaction --no-ansi

# Copy source code
COPY src/ ./src/

# Create temporary directory for database output
RUN mkdir -p /tmp/vectordb

# Set environment variables
# The database will be written to /tmp/vectordb
ENV CHROMADB_DIRECTORY=/tmp/vectordb
ENV PYTHONUNBUFFERED=1

# Default OBP configuration (can be overridden at runtime)
ENV OBP_BASE_URL=https://apisandbox.openbankproject.com
ENV OBP_API_VERSION=v6.0.0

# Required for langchain embeddings (must be provided at runtime)
# ENV OPENAI_API_KEY=your-key-here
# or
# ENV ANTHROPIC_API_KEY=your-key-here

# Set VECTOR_STORE_TYPE
ENV VECTOR_STORE_TYPE=chroma

# Run the populate script
CMD ["python", "src/database/populate_vector_db.py"]

# Optional: Mount a volume to persist the database
# Example: docker run -v $(pwd)/vectordb_output:/tmp/vectordb ...
